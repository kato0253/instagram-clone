<h1>一覧</h1>
<table>
  <tr >
    <th>投稿者</th>
    <th>内容</th>
    <th>画像</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= blog.content %></td>
    <% if blog.image.url.nil? %>
    <td><%= image_tag ''%></td>
    <% else %>
    <td><%= image_tag blog.image.url%></td>
    <% end %>
    <% if blog.user.id == session[:user_id] %>
    <td><%= link_to '編集', edit_blog_path(blog.id)%></td>
    <td><%= link_to '削除', blog_path(blog.id), method: :delete %></td>
  　<!-- <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td> -->
    <%end%>
  </tr>
<% end %>
</table>
